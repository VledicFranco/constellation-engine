{
  "name": "constellation-lang",
  "displayName": "Constellation Language Support",
  "description": "Language support for Constellation orchestration DSL with LSP integration",
  "version": "0.5.0",
  "publisher": "constellation",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:constellation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "constellation",
        "aliases": [
          "Constellation",
          "constellation-lang"
        ],
        "extensions": [
          ".cst"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "constellation",
        "scopeName": "source.constellation",
        "path": "./syntaxes/constellation.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "function",
        "superType": "function",
        "description": "A module/function call in constellation-lang"
      },
      {
        "id": "type",
        "superType": "type",
        "description": "A type name in constellation-lang"
      },
      {
        "id": "parameter",
        "superType": "parameter",
        "description": "An input parameter in constellation-lang"
      },
      {
        "id": "variable",
        "superType": "variable",
        "description": "A variable in constellation-lang"
      },
      {
        "id": "namespace",
        "superType": "namespace",
        "description": "A namespace/import in constellation-lang"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "constellation",
        "scopes": {
          "function": ["entity.name.function.constellation"],
          "function.defaultLibrary": ["support.function.constellation"],
          "type": ["entity.name.type.constellation"],
          "type.declaration": ["entity.name.type.definition.constellation"],
          "parameter": ["variable.parameter.constellation"],
          "parameter.declaration": ["variable.parameter.declaration.constellation"],
          "variable": ["variable.other.constellation"],
          "variable.declaration": ["variable.other.declaration.constellation"],
          "namespace": ["entity.name.namespace.constellation"],
          "property": ["variable.other.property.constellation"],
          "keyword": ["keyword.constellation"],
          "string": ["string.constellation"],
          "number": ["constant.numeric.constellation"],
          "operator": ["keyword.operator.constellation"],
          "comment": ["comment.constellation"]
        }
      }
    ],
    "commands": [
      {
        "command": "constellation.executePipeline",
        "title": "Constellation: Execute Current Pipeline"
      },
      {
        "command": "constellation.runScript",
        "title": "Constellation: Run Script",
        "icon": "$(play)"
      },
      {
        "command": "constellation.showDagVisualization",
        "title": "Constellation: Open Dashboard (DAG Visualization)",
        "icon": "$(browser)"
      },
      {
        "command": "constellation.showPerformanceStats",
        "title": "Constellation: Show Performance Statistics"
      }
    ],
    "keybindings": [
      {
        "command": "constellation.runScript",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == constellation"
      },
      {
        "command": "constellation.showDagVisualization",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorLangId == constellation"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "constellation.runScript",
          "when": "editorLangId == constellation",
          "group": "navigation"
        },
        {
          "command": "constellation.showDagVisualization",
          "when": "editorLangId == constellation",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "constellation.runScript",
          "when": "editorLangId == constellation",
          "group": "1_modification"
        },
        {
          "command": "constellation.showDagVisualization",
          "when": "editorLangId == constellation",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Constellation",
      "properties": {
        "constellation.server.url": {
          "type": "string",
          "default": "ws://localhost:8080/lsp",
          "description": "WebSocket URL of the Constellation Language Server"
        },
        "constellation.dagLayoutDirection": {
          "type": "string",
          "enum": ["TB", "LR"],
          "enumDescriptions": [
            "Top to Bottom - layers flow vertically",
            "Left to Right - layers flow horizontally"
          ],
          "default": "TB",
          "description": "Default layout direction for the DAG Visualizer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
    "pretest": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.75.0",
    "@types/ws": "^8.5.8",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.0"
  }
}
