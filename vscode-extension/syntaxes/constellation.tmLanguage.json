{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Constellation",
  "scopeName": "source.constellation",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#use-declaration"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#qualified-function-calls"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.constellation",
          "match": "#.*$"
        }
      ]
    },
    "use-declaration": {
      "patterns": [
        {
          "name": "meta.use-declaration.constellation",
          "match": "\\b(use)\\s+([a-z][a-zA-Z0-9_]*(\\.[a-z][a-zA-Z0-9_]*)*)(?:\\s+(as)\\s+([a-z][a-zA-Z0-9_]*))?",
          "captures": {
            "1": {
              "name": "keyword.control.import.constellation"
            },
            "2": {
              "name": "entity.name.namespace.constellation"
            },
            "4": {
              "name": "keyword.control.as.constellation"
            },
            "5": {
              "name": "entity.name.namespace.alias.constellation"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.constellation",
          "match": "\\b(in|out|if|else|type|use|as)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.constellation",
          "match": "\\b(String|Int|Long|Double|Boolean|Float|List)\\b"
        },
        {
          "name": "support.type.parameterized.constellation",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*<",
          "captures": {
            "1": {
              "name": "support.type.constellation"
            }
          }
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.constellation",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.constellation",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.constellation",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.constellation",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "qualified-function-calls": {
      "patterns": [
        {
          "name": "meta.function-call.qualified.constellation",
          "match": "\\b([a-z][a-zA-Z0-9_-]*(\\.[a-z][a-zA-Z0-9_-]*)+)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.qualified.constellation"
            }
          }
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "meta.function-call.constellation",
          "match": "\\b([a-zA-Z][a-zA-Z0-9_-]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.constellation"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.constellation",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
