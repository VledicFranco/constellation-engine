{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "out",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "pages/**/*.ts",
    "tests/**/*.ts",
    "helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "reports",
    "test-results"
  ]
}
